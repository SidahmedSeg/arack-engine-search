# =============================================================================
# Production Environment Variables for arack.io
# =============================================================================
# Copy this file to .env.production and fill in your values
# DO NOT commit .env.production to git!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_HOST=0.0.0.0
SEARCH_SERVICE_PORT=3000
EMAIL_SERVICE_PORT=3001

# Domain configuration
DOMAIN=arack.io
SEARCH_FRONTEND_URL=https://arack.io
EMAIL_FRONTEND_URL=https://mail.arack.io
SEARCH_API_URL=https://api.arack.io
EMAIL_API_URL=https://api-mail.arack.io
AUTH_URL=https://auth.arack.io

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=engine_search
DATABASE_URL=postgresql://postgres:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/engine_search

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_THIS_SECURE_REDIS_PASSWORD

# =============================================================================
# MEILISEARCH CONFIGURATION
# =============================================================================
MEILISEARCH_URL=http://meilisearch:7700
MEILISEARCH_KEY=CHANGE_THIS_MEILISEARCH_MASTER_KEY

# =============================================================================
# QDRANT CONFIGURATION
# =============================================================================
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=CHANGE_THIS_QDRANT_API_KEY

# =============================================================================
# ORY KRATOS CONFIGURATION
# =============================================================================
KRATOS_PUBLIC_URL=https://auth.arack.io
KRATOS_ADMIN_URL=http://kratos:4434
KRATOS_DATABASE_URL=postgresql://postgres:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/engine_search
KRATOS_SECRETS_COOKIE=CHANGE_THIS_32_CHAR_COOKIE_SECRET
KRATOS_SECRETS_CIPHER=CHANGE_THIS_32_CHAR_CIPHER_SECRET

# =============================================================================
# ORY HYDRA CONFIGURATION
# =============================================================================
HYDRA_PUBLIC_URL=https://oauth.arack.io
HYDRA_ADMIN_URL=http://hydra:4445
HYDRA_DATABASE_URL=postgresql://postgres:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/engine_search
HYDRA_SYSTEM_SECRET=CHANGE_THIS_32_CHAR_SYSTEM_SECRET

# =============================================================================
# STALWART MAIL SERVER
# =============================================================================
STALWART_URL=http://stalwart:8080
STALWART_ADMIN_USER=admin
STALWART_ADMIN_PASSWORD=CHANGE_THIS_STALWART_ADMIN_PASSWORD
DEFAULT_EMAIL_PASSWORD=CHANGE_THIS_DEFAULT_EMAIL_PASSWORD

# =============================================================================
# CENTRIFUGO (Real-time WebSocket)
# =============================================================================
CENTRIFUGO_URL=http://centrifugo:8000
CENTRIFUGO_WS_URL=wss://ws.arack.io
CENTRIFUGO_TOKEN_HMAC_SECRET=CHANGE_THIS_CENTRIFUGO_HMAC_SECRET
CENTRIFUGO_API_KEY=CHANGE_THIS_CENTRIFUGO_API_KEY

# =============================================================================
# OPENAI (AI Features)
# =============================================================================
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE

# =============================================================================
# CRAWLER CONFIGURATION
# =============================================================================
CRAWLER_MAX_DEPTH=3
CRAWLER_MAX_CONCURRENT=10
CRAWLER_REQUESTS_PER_SECOND=2
CRAWLER_MIN_DELAY_MS=1000
CRAWLER_USER_AGENT=ArackBot/1.0 (+https://arack.io/bot)
CRAWLER_ACCEPT_LANGUAGE=en-US,en;q=0.9

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# Let's Encrypt email for SSL certificate notifications
LETSENCRYPT_EMAIL=admin@arack.io

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
RUST_LOG=info
