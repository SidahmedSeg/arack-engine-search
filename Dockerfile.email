# Build Stage
FROM rust:1.90 as builder

WORKDIR /app

# Copy manifests
COPY Cargo.toml Cargo.lock ./

# Copy SQLx query metadata for offline mode
COPY .sqlx ./.sqlx

# Copy source files
COPY src ./src
COPY search ./search
COPY email ./email
COPY migrations ./migrations

# Build email-service binary in release mode with email features (includes OpenAI)
RUN cargo build --release --bin email-service --features email

# Runtime Stage
FROM ubuntu:24.04

# Install runtime dependencies (PostgreSQL client, OpenSSL, CA certificates)
RUN apt-get update && apt-get install -y \
    libpq5 \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the compiled binary from builder
COPY --from=builder /app/target/release/email-service /usr/local/bin/email-service

# Copy migrations directory for runtime migration execution
COPY --from=builder /app/migrations /app/migrations

# Expose port
EXPOSE 3001

# Run the binary
CMD ["email-service"]
